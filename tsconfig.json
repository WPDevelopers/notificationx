{
    "compilerOptions": {
        "outDir": "./nxbuild/",
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
            "es2015",
            "es2016",
            "es2018"
        ],
        "jsx": "react",
        "module": "esnext", // "commonjs",
        "esModuleInterop": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "sourceMap": true,
        "types": ["node"],
    },
    "include": [
        "**/**/*"
    ],
    "exclude": [ "**/**/*.svg" ]
}